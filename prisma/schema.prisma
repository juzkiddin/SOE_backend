generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Otp {
  id        String   @id @default(uuid())
  otpCode   String
  clientId  String
  tableId   String
  createdAt DateTime @default(now())
  expiresAt DateTime
  verified  Boolean  @default(false)

  @@index([id])
  @@index([clientId])
  @@index([tableId])
}

model OtpAttempt {
  id        String   @id @default(uuid())
  clientId  String
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([clientId])
}